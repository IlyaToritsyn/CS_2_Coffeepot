<Window x:Class="CS_2_Coffeepot.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_2_Coffeepot"
        mc:Ignorable="d"
        Title="Пароль" Height="172.105" Width="200.313" Icon="Cup_of_coffee.jpg" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <PasswordBox x:Name="PasswordPasswordBox" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="164" GotFocus="PasswordPasswordBox_GotFocus" PasswordChanged="PasswordPasswordBox_PasswordChanged"/>
        <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="94,98,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="80">OK</Button>
        <Button IsCancel="True" MinWidth="60" Margin="10,98,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="80">Отмена</Button>
        <Label x:Name="InvalidPasswordLabel" Content="Неверный пароль." HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="164" Height="27" Foreground="Red"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="164"/>
    </Grid>
</Window>
