<Window x:Class="CS_2_Coffeepot.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_2_Coffeepot"
        mc:Ignorable="d"
        Title="AdminPanelWindow" Height="250.312" Width="274.062">
    <Grid>
        <ComboBox x:Name="DrinksComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True" SelectedIndex="0" SelectionChanged="DrinksComboBox_SelectionChanged"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" Height="23" Margin="135,10,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="120" GotFocus="PriceTextBox_GotFocus"/>
        <Button x:Name="ApplyButton" Content="Apply" HorizontalAlignment="Left" Margin="10,188,0,0" VerticalAlignment="Top" Width="75" Click="ApplyButton_Click"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="181,188,0,0" VerticalAlignment="Top" Width="75" Click="CloseButton_Click"/>
        <Label x:Name="ChangesAppliedLabel" Content="Изменения успешно применены." HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Width="245" Foreground="#FF00A400" FontWeight="Bold" Visibility="Hidden"/>

    </Grid>
</Window>
