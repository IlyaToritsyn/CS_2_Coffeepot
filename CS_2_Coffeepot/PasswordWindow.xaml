<Window x:Class="CS_2_Coffeepot.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_2_Coffeepot"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="132.186" Width="191.563">
    <Grid>
        <PasswordBox x:Name="PasswordPasswordBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="164" GotFocus="PasswordPasswordBox_GotFocus"/>
        <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="10,66,102,10">OK</Button>
        <Button IsCancel="True" MinWidth="60" Margin="87,66,10,10">Отмена</Button>
        <Label x:Name="InvalidPasswordLabel" Content="Неверный пароль." HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="164" Height="27" Visibility="Hidden"/>
    </Grid>
</Window>
